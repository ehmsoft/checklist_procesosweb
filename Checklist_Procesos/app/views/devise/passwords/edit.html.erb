<% provide :header_title, "Cambiar Contraseña"%>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div data-role="fieldcontain" class="ui-hide-label">
  	<%= f.label :password, "Nueva Contraseña" %><br />
  	<%= f.password_field :password, :autofocus => true, placeholder: "Contraseña nueva" %>
  </div>

  <div data-role="fieldcontain" class="ui-hide-label">
  	<%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
  	<%= f.password_field :password_confirmation, placeholder: "Confirmar nueva contraseña" %>
  </div>

  <div><%= f.submit "Cambiar mi contraseña" %></div>
<% end %>

<%= render "devise/shared/links" %>
