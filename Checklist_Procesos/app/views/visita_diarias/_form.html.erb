<%= form_for([@ronda, @visita_diaria]) do |f| %>
  <% if @visita_diaria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@visita_diaria.errors.count, "error") %> evit√≥ que la visita se guardara:</h2>

      <ul>
      <% @visita_diaria.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div data-role="fieldcontain">
    <%= f.label :juzgado_id, class: :select %>
    <%= grouped_collection_select(:visita_diaria,:juzgado_id, Ciudad.all, :juzgados, :nombre, :id, :nombre_completo) %>
  </div>
  <div data-role="fieldcontain">
    <%= f.label :estados %><br />
    <%= f.check_box :estados %>
  </div>
  <div data-role="fieldcontain" >
    <%= f.label :n_estados %><br />
    <%= f.range_field :n_estados, in: 0..50 %>
  </div>
  <div data-role="fieldcontain">
    <%= f.label :edictos %><br />
    <%= f.check_box :edictos %>
  </div>
  <div data-role="fieldcontain">
    <%= f.label :n_edictos %><br />
    <%= f.range_field :n_edictos, in: 0..50 %>
  </div>
  <div data-role="fieldcontain">
    <%= f.label :traslados %><br />
    <%= f.check_box :traslados %>
  </div>
  <div data-role="fieldcontain">
    <%= f.label :n_traslados %><br />
    <%= f.range_field :n_traslados, in: 0..50 %>
  </div>
  <div data-role="fieldcontain">
    <%= f.label :nada %><br />
    <%= f.check_box :nada %>
  </div>
  <div data-role="fieldcontain" >
  	<fieldset data-role="controlgroup" data-type="horizontal">
    	<legend >Fecha</legend>
    	<%= f.date_select :fecha %>
    </fieldset>
  </div>
  <div class="actions">
    <%= f.submit "Aceptar" %>
  </div>
<% end %>
